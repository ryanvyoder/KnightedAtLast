/*
  Player Class
 */
function Player(x, y){
  GameObject.call(x, y);
  this.dx = 0;
  this.dx = 0;
  this.numFrame = 0;
  this.playerSource = "knights.png";
  this.playerFrame =false;

  this.update = function(){
    this.numFrame++;
    if(leftPressed){
      this.playerSource = "knights_2.png"
      this.dx = -1;
    }
    else if(rightPressed){
      this.dx = 1;
      this.playerSource = "knights.png"
    }
    else{
      this. dx = 0;
    }

    // Get image for player
    var playerImage = new Image();
    playerImage.src = this.playerSource;
    this.x = this.x + 5*this.dx;

    // Animate the player
    if(numFrame % 50 == 0){
      playerFrame = !playerFrame;
    }

    // Draw player onto the canvas
    if(playerFrame){
      context.drawImage(knightImage, knightImage.width/2 + 10, 0, knightImage.width, knightImage.height, knightx, knighty, knightImage.width, knightImage.height);
    }
    else{
      context.drawImage(knightImage, 0, 0, knightImage.width/2 - 10, knightImage.height, knightx, knighty, knightImage.width/2 - 10, knightImage.height);
    }

  };
}
Player.prototype = Object.create(GameObject.prototype);
